{
  "exclude": ["node_modules"],
  "extends": "@b3/tsconfig/vite.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/globals"],
    "skipLibCheck": true,
    "noEmitOnError": false,
    "strict": false
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js"]
}
